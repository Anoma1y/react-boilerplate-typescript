{
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "target": "es6",
    "jsx": "react",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "app",
    "baseUrl": ".",
    "outDir": "./build/",
    "allowJs": false,
    "resolveJsonModule": true,
    "newLine": "LF",
    "paths": {
      "*": [
        "node_modules/@types/*",
        "app/*"
      ]
    },
    "lib": ["es5", "es2015", "es6", "es7", "es2017", "dom"],
    "types": ["webpack-env", "node", "jest"]
  },
  "include": ["app/**/*"],
  "exclude": [
    "node_modules",
    "app/**/*.test.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "reportFiles": ["./app/**/*"]
  }
}
