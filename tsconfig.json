{
  "compilerOptions": {
    "baseUrl": "./", // relative paths
//    "rootDir": "app",
    "outDir": "./build/", // target for compiled files
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "esModuleInterop": true, // true - remove required import * as React
    "target": "es6",
    "jsx": "react", // transform jsx files
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true, // include js files
    "resolveJsonModule": true,
    "removeComments": true,
    "newLine": "LF",
    "typeRoots": ["node_modules/@types"],
    "experimentalDecorators": true,
    "paths": {
      "*": [
        "app/*"
      ]
    },
    "lib": ["dom", "es5", "es6", "es7", "es2017"],
    "types": ["node", "jest"]
  },
  "include": [
    "app"
  ],
  "exclude": [
    "node_modules",
    "app/**/*.test.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "forkChecker": true,
    "useCache": false,
    "reportFiles": [
      "app/**/*.{ts,tsx}"
    ]
  }
}
